<% provide(:title, 'アカウント作成') %>
<div class='container signup-container'>
  <div class='row'>
    <div class='col'>
      <h1 class='title-container'>アカウント作成</h1>
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render 'devise/shared/error_messages', resource: resource %>

          <div class='form-group'>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'メールアドレス（例：email@example.com）', class: 'form-control' %>
          </div>

          <div class='form-group'>
            <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'パスワード（6文字以上）', class: 'form-control' %>
          </div>

          <div class='form-group'>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'パスワード（再入力）', class: 'form-control' %>
          </div>

          <div class='form-group'>
            <%= f.submit 'Signup!', class: 'btn btn-outline-info form-control form-submit' %>
          </div>
        <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
